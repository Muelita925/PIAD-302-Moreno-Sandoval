    private void btnsumaActionPerformed(java.awt.event.ActionEvent evt) {                                        
        int num1;
        int num2;
        num1 = Integer.parseInt(numero1.getText());      
        num2 = Integer.parseInt(numero2.getText());
        txtresultado.setText(String.valueOf(num1+num2));
    }                                       

    private void btnrestaActionPerformed(java.awt.event.ActionEvent evt) {                                         
        int num1;
        int num2;
        num1 = Integer.parseInt(numero1.getText());      
        num2 = Integer.parseInt(numero2.getText());
        txtresultado.setText(String.valueOf(num1-num2));
    }                                        

    private void btnmultiplicacionActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        int num1;
        int num2;
        num1 = Integer.parseInt(numero1.getText());      
        num2 = Integer.parseInt(numero2.getText());
        txtresultado.setText(String.valueOf(num1*num2));
    }                                                 

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        numero1.setText("");
        numero2.setText("");
        txtresultado.setText("");
       
    }                                        

    private void btndividirActionPerformed(java.awt.event.ActionEvent evt) {                                           
        int num1;
        int num2;
        num1 = Integer.parseInt(numero1.getText());      
        num2 = Integer.parseInt(numero2.getText());
        txtresultado.setText(String.valueOf(num1/num2));
    }                                          

